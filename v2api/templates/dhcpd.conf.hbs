# {{{ Self::CONFIG_NOTICE }}}

option domain-name "{{ network.domain }}";
default-lease-time 600;
max-lease-time 7200;
ddns-update-style none;
authoritative;

{{#if self.network.lan.enabled }}
subnet {{ self.network.lan.subnet.get_prefix_as_ipv4_addr().to_string() }} netmask {{ self.network.lan.subnet.get_mask_as_ipv4_addr().to_string() }} {
    range {{ self.dhcp.lan.range.start.to_string() }} {{ self.dhcp.lan.range.end.to_string() }};
    option subnet-mask {{ self.network.lan.subnet.get_mask_as_ipv4_addr().to_string() }};
    option routers {{ self.network.lan.address.to_string() }};
    option domain-name-servers {{ self.network.lan.address.to_string() }};
    # option broadcast-address self.network.lan.subnet_broadcast;
}
{{/if}}

{{#if self.network.wlan.enabled }}
subnet {{ self.network.wlan.subnet.get_prefix_as_ipv4_addr().to_string() }} netmask {{ self.network.wlan.subnet.get_mask_as_ipv4_addr().to_string() }} {
    range {{ self.dhcp.wlan.range.start.to_string() }} {{ self.dhcp.wlan.range.end.to_string() }};
    option subnet-mask {{ self.network.wlan.subnet.get_mask_as_ipv4_addr().to_string() }};
    option routers {{ self.network.wlan.address.to_string() }};
    option domain-name-servers {{ self.network.wlan.address.to_string() }};
    # option broadcast-address # self.network.wlan.subnet_broadcast;
}
{{/if}}

{{ self.dhcp.extra_config }}
